# CI Dockerfile - uses pre-built binaries for faster multi-arch builds
# Usage: docker buildx build --platform linux/amd64,linux/arm64 -f Dockerfile.ci .
#
# Expects pre-built binaries in docker-build/linux/{amd64,arm64}/refyne-api

# Chainguard distroless with glibc - minimal and secure
FROM cgr.dev/chainguard/glibc-dynamic:latest

ARG TARGETARCH
ARG VERSION=dev

WORKDIR /app

# Copy pre-built binary for target architecture
COPY docker-build/linux/${TARGETARCH}/refyne-api /app/refyne-api

# Expose port
EXPOSE 8080

# Set environment defaults
ENV PORT=8080
ENV DATABASE_URL=file:/data/refyne.db

# Health check (exec form works in distroless)
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD ["/app/refyne-api", "-health"]

# Labels
LABEL org.opencontainers.image.title="Refyne API"
LABEL org.opencontainers.image.description="LLM-powered web extraction API"
LABEL org.opencontainers.image.version="${VERSION}"
LABEL org.opencontainers.image.source="https://github.com/jmylchreest/refyne-api"

# Run the binary (runs as nonroot user 65532 by default)
ENTRYPOINT ["/app/refyne-api"]
