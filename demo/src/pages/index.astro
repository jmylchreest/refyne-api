---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { getJobs, formatSalary, formatJobType } from '../lib/jobs';
import { getBlogPosts, formatDate } from '../lib/blog';
import { getNews, formatRelativeTime, getSourceColor } from '../lib/news';
import { getProducts, formatPrice, formatRating as formatProductRating } from '../lib/products';
import { getRecipes, formatTime, formatRating as formatRecipeRating, getDifficultyColor } from '../lib/recipes';
import { getReviews, getTypeColor, formatRelativeTime as formatReviewTime } from '../lib/reviews';

const jobs = getJobs().slice(0, 4);
const blogPosts = await getBlogPosts();
const featuredPosts = blogPosts.slice(0, 3);
const news = await getNews();
const latestNews = news.slice(0, 4);
const products = await getProducts();
const featuredProducts = products.slice(0, 4);
const recipes = await getRecipes();
const featuredRecipes = recipes.filter((r) => r.rating >= 4.5).slice(0, 4);
const reviews = await getReviews();
const recentReviews = reviews.slice(0, 4);

function capitalizeFirst(str: string): string {
  return str.charAt(0).toUpperCase() + str.slice(1);
}
---

<Layout title="Home">
  <!-- Stats Bar -->
  <section class="border-b border-gray-200 dark:border-gray-800">
    <div class="container py-4">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Demo data for SDK testing and client demonstrations
        </p>
        <div class="flex flex-wrap items-center gap-6 text-sm">
          <span class="text-gray-600 dark:text-gray-300"><span class="font-semibold text-indigo-600 dark:text-indigo-400">{getJobs().length}</span> Jobs</span>
          <span class="text-gray-600 dark:text-gray-300"><span class="font-semibold text-sky-600 dark:text-sky-400">{products.length}</span> Products</span>
          <span class="text-gray-600 dark:text-gray-300"><span class="font-semibold text-amber-600 dark:text-amber-400">{recipes.length}</span> Recipes</span>
          <span class="text-gray-600 dark:text-gray-300"><span class="font-semibold text-emerald-600 dark:text-emerald-400">{reviews.length}</span> Reviews</span>
          <span class="text-gray-600 dark:text-gray-300"><span class="font-semibold text-violet-600 dark:text-violet-400">{blogPosts.length}</span> Posts</span>
          <span class="text-gray-600 dark:text-gray-300"><span class="font-semibold text-rose-600 dark:text-rose-400">{news.length}</span> News</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Jobs -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Latest Jobs</h2>
        <a href="/jobs" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 font-medium">
          View all jobs &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        {jobs.map((job) => (
          <Card href={`/jobs/${job.id}`}>
            <div class="p-6">
              <div class="flex items-start gap-4">
                <img
                  src={job.company_logo}
                  alt={job.company}
                  class="w-12 h-12 rounded-lg"
                />
                <div class="flex-1 min-w-0">
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100 truncate">{job.title}</h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400">{job.company}</p>
                  <div class="flex flex-wrap items-center gap-2 mt-2">
                    <span class="badge-blue">{job.category}</span>
                    <span class="badge-gray">{formatJobType(job.type)}</span>
                  </div>
                </div>
                <div class="text-right">
                  <div class="font-medium text-gray-900 dark:text-gray-100">{formatSalary(job.salary_min, job.salary_max, job.currency)}</div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">{job.location}</div>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-12 md:py-16 section-alt">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Featured Products</h2>
        <a href="/products" class="text-sky-600 dark:text-sky-400 hover:text-sky-700 dark:hover:text-sky-300 font-medium">
          View all products &rarr;
        </a>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredProducts.map((product) => (
          <Card href={`/products/${product.id}`}>
            <div class="aspect-square bg-gray-100 dark:bg-gray-800">
              <img
                src={product.thumbnail}
                alt={product.name}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-4">
              <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">{product.brand}</p>
              <h3 class="font-medium text-gray-900 dark:text-gray-100 truncate mt-1">{product.name}</h3>
              <div class="flex items-center gap-2 mt-2">
                <span class="font-semibold text-gray-900 dark:text-gray-100">{formatPrice(product.price)}</span>
                {product.original_price && (
                  <span class="text-sm text-gray-400 dark:text-gray-500 line-through">{formatPrice(product.original_price)}</span>
                )}
              </div>
              <div class="flex items-center gap-1 mt-2">
                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
                <span class="text-sm text-gray-600 dark:text-gray-400">{formatProductRating(product.rating)}</span>
                <span class="text-sm text-gray-400 dark:text-gray-500">({product.reviews_count})</span>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Recipes -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Featured Recipes</h2>
        <a href="/recipes" class="text-amber-600 dark:text-amber-400 hover:text-amber-700 dark:hover:text-amber-300 font-medium">
          View all recipes &rarr;
        </a>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredRecipes.map((recipe) => (
          <Card href={`/recipes/${recipe.id}`}>
            <div class="aspect-[4/3] bg-gray-100 dark:bg-gray-800 relative overflow-hidden">
              <img
                src={recipe.image}
                alt={recipe.name}
                class="w-full h-full object-cover"
              />
              <span class={`absolute top-2 right-2 ${getDifficultyColor(recipe.difficulty)}`}>
                {recipe.difficulty}
              </span>
            </div>
            <div class="p-4">
              <p class="text-xs text-orange-600 dark:text-orange-400 font-medium uppercase tracking-wide">{recipe.cuisine}</p>
              <h3 class="font-medium text-gray-900 dark:text-gray-100 truncate mt-1">{recipe.name}</h3>
              <div class="flex items-center gap-3 mt-3 text-sm text-gray-500 dark:text-gray-400">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{formatTime(recipe.total_time_minutes)}</span>
                </div>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                    <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                  </svg>
                  <span class="text-gray-600 dark:text-gray-400">{formatRecipeRating(recipe.rating)}</span>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  <section class="py-12 md:py-16 section-alt">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Latest Blog Posts</h2>
        <a href="/blog" class="text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300 font-medium">
          View all posts &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        {featuredPosts.map((post) => (
          <Card href={`/blog/${post.slug}`}>
            <div class="aspect-video bg-gray-100 dark:bg-gray-800">
              <img
                src={post.image_url}
                alt={post.title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-5">
              <div class="flex items-center gap-2 mb-3">
                <span class="badge-purple">{post.category}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{post.reading_time} min read</span>
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-gray-100 line-clamp-2">{post.title}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 line-clamp-2">{post.excerpt}</p>
              <div class="flex items-center gap-3 mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
                <img
                  src={post.author_avatar}
                  alt={post.author}
                  class="w-8 h-8 rounded-full"
                />
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-100">{post.author}</p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">{formatDate(post.published_at)}</p>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest News -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Latest News</h2>
        <a href="/news" class="text-rose-600 dark:text-rose-400 hover:text-rose-700 dark:hover:text-rose-300 font-medium">
          View all news &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        {latestNews.map((item) => (
          <Card href={`/news/${item.id}`}>
            <div class="p-5">
              <div class="flex items-center gap-2 mb-3">
                <span class={getSourceColor(item.source)}>{item.source}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{formatRelativeTime(item.published_at)}</span>
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-gray-100 line-clamp-2">{item.title}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 line-clamp-2">{item.summary}</p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Reviews & Feedback -->
  <section class="py-12 md:py-16 section-alt">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Recent Reviews & Feedback</h2>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">User reviews, comments, and product feedback</p>
        </div>
        <a href="/reviews" class="text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300 font-medium">
          View all reviews &rarr;
        </a>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        {recentReviews.map((review) => (
          <Card href={`/reviews/${review.id}`}>
            <div class="p-5">
              <div class="flex items-start justify-between mb-3">
                <div class="flex items-center gap-3">
                  <img
                    src={review.author.avatar}
                    alt={review.author.name}
                    class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800"
                  />
                  <div>
                    <p class="font-medium text-gray-900 dark:text-gray-100">{review.author.name}</p>
                    <p class="text-xs text-gray-500 dark:text-gray-400">{formatReviewTime(review.created_at)}</p>
                  </div>
                </div>
              </div>
              {review.title && (
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">{review.title}</h3>
              )}
              <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 mb-3">{review.body}</p>
              <div class="flex items-center gap-2">
                <span class={getTypeColor(review.type)}>{capitalizeFirst(review.type)}</span>
                {review.rating && (
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">{review.rating}</span>
                  </div>
                )}
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>
</Layout>
