---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import { getNews, getNewsById, formatRelativeTime, getSourceColor } from '../../lib/news';

export async function getStaticPaths() {
  const news = await getNews();
  return news.map((item) => ({
    params: { id: item.id },
  }));
}

const { id } = Astro.params;
const newsItem = await getNewsById(id);

if (!newsItem) {
  return Astro.redirect('/news');
}

const allNews = await getNews();
const relatedNews = allNews
  .filter((item) => item.id !== newsItem.id && item.source === newsItem.source)
  .slice(0, 4);
---

<Layout title={newsItem.title} description={newsItem.summary}>
  <!-- Header -->
  <section class="bg-gradient-to-br from-indigo-600 to-purple-700 text-white">
    <div class="container py-12">
      <a
        href="/news"
        class="inline-flex items-center gap-2 text-indigo-200 hover:text-white transition-colors mb-6"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to News
      </a>

      <div class="max-w-3xl">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class="bg-white/20 px-3 py-1 rounded-full text-sm">{newsItem.source}</span>
          <span class="text-indigo-200">{formatRelativeTime(newsItem.published_at)}</span>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold">{newsItem.title}</h1>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="py-8 md:py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <!-- Summary -->
        <div class="bg-white rounded-xl border border-gray-200 p-6 mb-8">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Summary</h2>
          <p class="text-gray-600">
            {newsItem.summary || 'No summary available for this article.'}
          </p>
        </div>

        <!-- Source Link -->
        <div class="bg-indigo-50 rounded-xl border border-indigo-100 p-6 mb-8">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center shrink-0">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900 mb-1">Read Full Article</h3>
              <p class="text-sm text-gray-600 mb-3">
                This is a preview of the article. Click below to read the full article on {newsItem.source}.
              </p>
              <a
                href={newsItem.url}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-primary inline-flex items-center gap-2"
              >
                Visit {newsItem.source}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Metadata -->
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Article Details</h2>
          <dl class="grid sm:grid-cols-2 gap-4 text-sm">
            <div>
              <dt class="text-gray-500">Source</dt>
              <dd class="font-medium text-gray-900 mt-1">{newsItem.source}</dd>
            </div>
            <div>
              <dt class="text-gray-500">Category</dt>
              <dd class="font-medium text-gray-900 mt-1">{newsItem.category}</dd>
            </div>
            <div>
              <dt class="text-gray-500">Published</dt>
              <dd class="font-medium text-gray-900 mt-1">
                {newsItem.published_at.toLocaleDateString('en-US', {
                  weekday: 'long',
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </dd>
            </div>
            <div>
              <dt class="text-gray-500">Time</dt>
              <dd class="font-medium text-gray-900 mt-1">
                {newsItem.published_at.toLocaleTimeString('en-US', {
                  hour: '2-digit',
                  minute: '2-digit',
                })}
              </dd>
            </div>
          </dl>
        </div>

        <!-- Share -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-4">Share this article</p>
          <div class="flex gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(newsItem.title)}&url=${encodeURIComponent(newsItem.url)}`}
              target="_blank"
              rel="noopener"
              class="btn-secondary"
            >
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(newsItem.url)}&title=${encodeURIComponent(newsItem.title)}`}
              target="_blank"
              rel="noopener"
              class="btn-secondary"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related News -->
  {relatedNews.length > 0 && (
    <section class="py-8 md:py-12 bg-gray-50">
      <div class="container">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">More from {newsItem.source}</h2>
        <div class="grid md:grid-cols-2 gap-4">
          {relatedNews.map((item) => (
            <Card href={`/news/${item.id}`}>
              <div class="p-5">
                <div class="flex items-center gap-2 mb-2">
                  <span class={getSourceColor(item.source)}>{item.source}</span>
                  <span class="text-sm text-gray-500">{formatRelativeTime(item.published_at)}</span>
                </div>
                <h3 class="font-semibold text-gray-900 line-clamp-2">{item.title}</h3>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
