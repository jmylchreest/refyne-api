---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import CategoryFilter from '../../components/CategoryFilter.astro';
import Pagination from '../../components/Pagination.astro';
import {
  getJobs,
  getJobCategories,
  getJobTypes,
  getJobLocations,
  getJobWorkModes,
  formatSalary,
  formatJobType,
  formatWorkMode,
  type Job,
  type WorkMode,
} from '../../lib/jobs';

const url = Astro.url;
const category = url.searchParams.get('category') || undefined;
const type = url.searchParams.get('type') || undefined;
const workMode = url.searchParams.get('work_mode') as WorkMode | undefined;
const page = parseInt(url.searchParams.get('page') || '1', 10);
const perPage = 25;

let allJobs = getJobs();

// Apply filters
if (category) {
  allJobs = allJobs.filter((job) => job.category === category);
}
if (type) {
  allJobs = allJobs.filter((job) => job.type === type);
}
if (workMode) {
  allJobs = allJobs.filter((job) => job.work_mode === workMode);
}

const totalPages = Math.ceil(allJobs.length / perPage);
const jobs = allJobs.slice((page - 1) * perPage, page * perPage);

const categories = getJobCategories();
const types = getJobTypes();
const workModes = getJobWorkModes();

function getFilterUrl(params: Record<string, string | undefined>): string {
  const searchParams = new URLSearchParams();
  if (params.category) searchParams.set('category', params.category);
  if (params.type) searchParams.set('type', params.type);
  if (params.work_mode) searchParams.set('work_mode', params.work_mode);
  const qs = searchParams.toString();
  return qs ? `/jobs?${qs}` : '/jobs';
}

function getWorkModeColor(mode: WorkMode): string {
  switch (mode) {
    case 'remote':
      return 'badge-green';
    case 'hybrid':
      return 'badge-yellow';
    case 'on-site':
      return 'badge-gray';
    default:
      return 'badge-gray';
  }
}
---

<Layout title="Jobs" description="Browse our latest job listings">
  <!-- Header -->
  <section class="page-header page-header-jobs">
    <div class="container">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Job Listings</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {getJobs().length} opportunities across engineering, design, product, and more
          </p>
        </div>
        <div class="counter-badge counter-badge-jobs hidden sm:inline-flex">
          <span class="counter-badge-tab">Jobs</span>
          <span class="counter-badge-value">{getJobs().length}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters -->
  <section class="filter-bar sticky top-16 z-40">
    <div class="container py-4">
      <div class="flex flex-col lg:flex-row gap-4">
        <!-- Category Filter -->
        <div class="flex-1">
          <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">Category</label>
          <CategoryFilter
            categories={categories}
            currentCategory={category}
            basePath="/jobs"
          />
        </div>

        <!-- Type Filter -->
        <div>
          <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">Type</label>
          <div class="flex flex-wrap gap-2">
            <a
              href={getFilterUrl({ category, work_mode: workMode })}
              class:list={[
                'filter-btn',
                !type ? 'bg-indigo-600 text-white' : 'filter-btn-inactive',
              ]}
            >
              All
            </a>
            {types.map((t) => (
              <a
                href={getFilterUrl({ category, type: t, work_mode: workMode })}
                class:list={[
                  'filter-btn',
                  type === t ? 'bg-indigo-600 text-white' : 'filter-btn-inactive',
                ]}
              >
                {formatJobType(t)}
              </a>
            ))}
          </div>
        </div>

        <!-- Work Mode Filter -->
        <div>
          <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">Work Mode</label>
          <div class="flex flex-wrap gap-2">
            <a
              href={getFilterUrl({ category, type })}
              class:list={[
                'filter-btn',
                !workMode ? 'bg-indigo-600 text-white' : 'filter-btn-inactive',
              ]}
            >
              All
            </a>
            {workModes.map((wm) => (
              <a
                href={getFilterUrl({ category, type, work_mode: wm })}
                class:list={[
                  'filter-btn',
                  workMode === wm ? 'bg-indigo-600 text-white' : 'filter-btn-inactive',
                ]}
              >
                {formatWorkMode(wm)}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Results -->
  <section class="py-8">
    <div class="container">
      <div class="flex items-center justify-between mb-6">
        <p class="text-gray-600 dark:text-gray-400">
          Showing <span class="font-medium text-gray-900 dark:text-gray-100">{jobs.length}</span> of <span class="font-medium text-gray-900 dark:text-gray-100">{allJobs.length}</span> jobs
        </p>
      </div>

      {jobs.length > 0 ? (
        <div class="grid gap-4">
          {jobs.map((job) => (
            <Card href={`/jobs/${job.id}`}>
              <div class="p-6">
                <div class="flex flex-col md:flex-row md:items-center gap-4">
                  <img
                    src={job.company_logo}
                    alt={job.company}
                    class="w-14 h-14 rounded-xl"
                  />
                  <div class="flex-1 min-w-0">
                    <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-4">
                      <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{job.title}</h2>
                      <div class="flex flex-wrap gap-2">
                        <span class="badge-blue">{job.category}</span>
                        <span class="badge-gray">{formatJobType(job.type)}</span>
                        <span class={getWorkModeColor(job.work_mode)}>{formatWorkMode(job.work_mode)}</span>
                      </div>
                    </div>
                    <div class="flex flex-wrap items-center gap-x-4 gap-y-1 mt-2 text-sm text-gray-600 dark:text-gray-400">
                      <span>{job.company}</span>
                      <span class="hidden md:inline text-gray-400 dark:text-gray-600">&bull;</span>
                      <span>{job.location}</span>
                      <span class="hidden md:inline text-gray-400 dark:text-gray-600">&bull;</span>
                      <span>{job.country}</span>
                    </div>
                  </div>
                  <div class="text-left md:text-right">
                    <div class="font-semibold text-gray-900 dark:text-gray-100">{formatSalary(job.salary_min, job.salary_max, job.currency)}</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      {job.posted_at.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                    </div>
                  </div>
                </div>
              </div>
            </Card>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400">No jobs found matching your criteria.</p>
          <a href="/jobs" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 font-medium mt-2 inline-block">
            Clear filters
          </a>
        </div>
      )}

      <Pagination
        currentPage={page}
        totalPages={totalPages}
        basePath={getFilterUrl({ category, type, work_mode: workMode })}
      />
    </div>
  </section>
</Layout>
