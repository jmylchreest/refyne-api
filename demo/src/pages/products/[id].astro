---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import {
  getProducts,
  getProductById,
  formatPrice,
  formatRating,
  getStockStatus,
} from '../../lib/products';

export async function getStaticPaths() {
  const products = await getProducts();
  return products.map((product) => ({
    params: { id: product.id.toString() },
  }));
}

const { id } = Astro.params;
const product = await getProductById(parseInt(id, 10));

if (!product) {
  return Astro.redirect('/products');
}

const stockStatus = getStockStatus(product.stock);

const allProducts = await getProducts();
const relatedProducts = allProducts
  .filter((p) => p.id !== product.id && p.category === product.category)
  .slice(0, 4);
---

<Layout title={product.name} description={product.description}>
  <!-- Header -->
  <section class="bg-gradient-to-br from-indigo-600 to-purple-700 text-white">
    <div class="container py-6">
      <a
        href="/products"
        class="inline-flex items-center gap-2 text-indigo-200 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Products
      </a>
    </div>
  </section>

  <!-- Product Details -->
  <section class="py-8 md:py-12">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Images -->
        <div class="space-y-4">
          <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden relative">
            <img
              src={product.images[0] || product.thumbnail}
              alt={product.name}
              class="w-full h-full object-cover"
              id="main-image"
            />
            {product.discount_percentage > 0 && (
              <span class="absolute top-4 right-4 bg-red-500 text-white font-medium px-3 py-1.5 rounded-lg">
                -{Math.round(product.discount_percentage)}% OFF
              </span>
            )}
          </div>
          {product.images.length > 1 && (
            <div class="grid grid-cols-4 gap-3">
              {product.images.slice(0, 4).map((image, index) => (
                <button
                  class="aspect-square bg-gray-100 rounded-lg overflow-hidden border-2 border-transparent hover:border-indigo-500 transition-colors focus:outline-none focus:border-indigo-500"
                  data-image={image}
                  onclick={`document.getElementById('main-image').src = '${image}'`}
                >
                  <img
                    src={image}
                    alt={`${product.name} - Image ${index + 1}`}
                    class="w-full h-full object-cover"
                  />
                </button>
              ))}
            </div>
          )}
        </div>

        <!-- Details -->
        <div>
          <div class="mb-4">
            <p class="text-sm text-indigo-600 font-medium">{product.brand}</p>
            <h1 class="text-3xl font-bold text-gray-900 mt-1">{product.name}</h1>
          </div>

          <!-- Rating -->
          <div class="flex items-center gap-3 mb-6">
            <div class="flex items-center gap-1">
              {Array.from({ length: 5 }).map((_, i) => (
                <svg
                  class:list={[
                    'w-5 h-5',
                    i < Math.round(product.rating) ? 'text-yellow-400' : 'text-gray-200',
                  ]}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
              ))}
            </div>
            <span class="font-medium text-gray-900">{formatRating(product.rating)}</span>
            <span class="text-gray-500">({product.reviews_count} reviews)</span>
          </div>

          <!-- Price -->
          <div class="flex items-baseline gap-3 mb-6">
            <span class="text-3xl font-bold text-gray-900">{formatPrice(product.price)}</span>
            {product.original_price && (
              <span class="text-xl text-gray-400 line-through">{formatPrice(product.original_price)}</span>
            )}
          </div>

          <!-- Stock Status -->
          <div class="flex items-center gap-2 mb-6">
            <span class={stockStatus.color}>{stockStatus.label}</span>
            {product.stock > 0 && product.stock < 20 && (
              <span class="text-sm text-gray-500">Only {product.stock} left</span>
            )}
          </div>

          <!-- Description -->
          <div class="mb-8">
            <h2 class="text-lg font-semibold text-gray-900 mb-2">Description</h2>
            <p class="text-gray-600">{product.description}</p>
          </div>

          <!-- Add to Cart -->
          <div class="flex gap-4 mb-8">
            <button
              class="flex-1 btn-primary py-3"
              onclick="alert('This is a demo site. No actual purchase will be made.')"
            >
              Add to Cart
            </button>
            <button
              class="btn-secondary py-3"
              onclick="alert('This is a demo site. Wishlist not available.')"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </button>
          </div>

          <!-- Specs -->
          <div class="bg-gray-50 rounded-xl p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Specifications</h2>
            <dl class="space-y-3">
              <div class="flex justify-between text-sm">
                <dt class="text-gray-500">Category</dt>
                <dd class="font-medium text-gray-900">{product.category}</dd>
              </div>
              <div class="flex justify-between text-sm">
                <dt class="text-gray-500">Brand</dt>
                <dd class="font-medium text-gray-900">{product.brand}</dd>
              </div>
              {Object.entries(product.specs).map(([key, value]) => (
                <div class="flex justify-between text-sm">
                  <dt class="text-gray-500">{key}</dt>
                  <dd class="font-medium text-gray-900">{value}</dd>
                </div>
              ))}
            </dl>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products -->
  {relatedProducts.length > 0 && (
    <section class="py-8 md:py-12 bg-gray-50">
      <div class="container">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Products</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {relatedProducts.map((relatedProduct) => (
            <Card href={`/products/${relatedProduct.id}`}>
              <div class="aspect-square bg-gray-100">
                <img
                  src={relatedProduct.thumbnail}
                  alt={relatedProduct.name}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="p-4">
                <p class="text-xs text-gray-500 uppercase tracking-wide">{relatedProduct.brand}</p>
                <h3 class="font-medium text-gray-900 mt-1 line-clamp-2">{relatedProduct.name}</h3>
                <div class="flex items-center gap-2 mt-2">
                  <span class="font-semibold text-gray-900">{formatPrice(relatedProduct.price)}</span>
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
