---
import Layout from '../../layouts/Layout.astro';
import { getBlogPosts, getBlogPostBySlug, formatDate } from '../../lib/blog';

export async function getStaticPaths() {
  const posts = await getBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = await getBlogPostBySlug(slug);

if (!post) {
  return Astro.redirect('/blog');
}

const allPosts = await getBlogPosts();
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug && p.category === post.category)
  .slice(0, 3);
---

<Layout title={post.title} description={post.excerpt}>
  <!-- Header -->
  <section class="bg-gradient-to-br from-indigo-600 to-purple-700 text-white">
    <div class="container py-12">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-indigo-200 hover:text-white transition-colors mb-6"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Blog
      </a>

      <div class="max-w-3xl">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class="bg-white/20 px-3 py-1 rounded-full text-sm">{post.category}</span>
          <span class="text-indigo-200">{post.reading_time} min read</span>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold mb-6">{post.title}</h1>
        <div class="flex items-center gap-4">
          <img
            src={post.author_avatar}
            alt={post.author}
            class="w-12 h-12 rounded-full"
          />
          <div>
            <p class="font-medium">{post.author}</p>
            <p class="text-indigo-200">{formatDate(post.published_at)}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Image -->
  {post.image_url && (
    <div class="container -mt-0 md:-mt-4">
      <div class="max-w-4xl mx-auto">
        <img
          src={post.image_url}
          alt={post.title}
          class="w-full aspect-video object-cover rounded-xl shadow-lg"
        />
      </div>
    </div>
  )}

  <!-- Content -->
  <section class="py-8 md:py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <!-- Tags -->
        {post.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {post.tags.map((tag) => (
              <a
                href={`/blog?tag=${tag}`}
                class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-300 rounded-full text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}

        <!-- Article Content -->
        <article class="prose prose-lg prose-gray max-w-none">
          <div set:html={post.content || `<p>${post.excerpt}</p>`} />
        </article>

        <!-- Original Source -->
        {post.url && post.url !== '#' && (
          <div class="mt-8 p-4 bg-gray-50 dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700">
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Originally published on Dev.to:
              <a
                href={post.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 ml-1"
              >
                View original article &rarr;
              </a>
            </p>
          </div>
        )}

        <!-- Share -->
        <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-4">Share this article</p>
          <div class="flex gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://demo.refyne.uk/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener"
              class="btn-secondary"
            >
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(`https://demo.refyne.uk/blog/${post.slug}`)}&title=${encodeURIComponent(post.title)}`}
              target="_blank"
              rel="noopener"
              class="btn-secondary"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="py-8 md:py-12 bg-gray-50 dark:bg-gray-900/50">
      <div class="container">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Related Posts</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost) => (
            <a href={`/blog/${relatedPost.slug}`} class="card block">
              <div class="aspect-video bg-gray-100 dark:bg-gray-800">
                <img
                  src={relatedPost.image_url}
                  alt={relatedPost.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="p-4">
                <h3 class="font-semibold text-gray-900 dark:text-gray-100 line-clamp-2">{relatedPost.title}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">{relatedPost.reading_time} min read</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .prose :global(pre) {
    background-color: #111827;
    color: #f3f4f6;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
  }

  .prose :global(code) {
    background-color: #f3f4f6;
    color: #1f2937;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .prose :global(pre code) {
    background-color: transparent;
    color: inherit;
    padding: 0;
  }

  .prose :global(a) {
    color: #4f46e5;
  }

  .prose :global(a:hover) {
    color: #4338ca;
  }

  .prose :global(img) {
    border-radius: 0.5rem;
  }
</style>
