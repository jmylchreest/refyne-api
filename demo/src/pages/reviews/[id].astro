---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import {
  getReviews,
  getReviewById,
  getTypeColor,
  formatReviewDate,
  formatRelativeTime,
} from '../../lib/reviews';

export async function getStaticPaths() {
  const reviews = await getReviews();
  return reviews.map((review) => ({
    params: { id: review.id.toString() },
  }));
}

const { id } = Astro.params;
const review = await getReviewById(parseInt(id, 10));

if (!review) {
  return Astro.redirect('/reviews');
}

const allReviews = await getReviews();
const relatedReviews = allReviews
  .filter((r) => r.id !== review.id && r.type === review.type)
  .slice(0, 4);

function capitalizeFirst(str: string): string {
  return str.charAt(0).toUpperCase() + str.slice(1);
}
---

<Layout title={review.title || `Review by ${review.author.name}`} description={review.body.slice(0, 160)}>
  <!-- Header -->
  <section class="bg-gradient-to-br from-emerald-500 to-teal-600 text-white">
    <div class="container py-6">
      <a
        href="/reviews"
        class="inline-flex items-center gap-2 text-emerald-200 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Reviews
      </a>
    </div>
  </section>

  <!-- Review Content -->
  <section class="py-8 md:py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <!-- Author Info -->
        <div class="flex items-start gap-4 mb-6">
          <img
            src={review.author.avatar}
            alt={review.author.name}
            class="w-14 h-14 rounded-full bg-gray-100 dark:bg-gray-800"
          />
          <div class="flex-1">
            <div>
              <h2 class="font-semibold text-gray-900 dark:text-gray-100">{review.author.name}</h2>
              <p class="text-sm text-gray-500 dark:text-gray-400">@{review.author.username}</p>
            </div>
          </div>
        </div>

        <!-- Review Meta -->
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <span class={getTypeColor(review.type)}>{capitalizeFirst(review.type)}</span>
          {review.rating && (
            <div class="flex items-center gap-1">
              {Array.from({ length: 5 }).map((_, i) => (
                <svg
                  class:list={[
                    'w-5 h-5',
                    i < Math.round(review.rating!) ? 'text-yellow-400' : 'text-gray-200 dark:text-gray-600',
                  ]}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
              ))}
              <span class="font-medium text-gray-900 dark:text-gray-100 ml-1">{review.rating}</span>
            </div>
          )}
          {review.verified_purchase && (
            <span class="inline-flex items-center gap-1 text-sm text-green-600 dark:text-green-400 font-medium">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Verified Purchase
            </span>
          )}
          <span class="text-sm text-gray-500 dark:text-gray-400">{formatReviewDate(review.created_at)}</span>
        </div>

        <!-- Product Info -->
        {review.product && (
          <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-4 mb-6">
            <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">Reviewed Product</p>
            <p class="font-medium text-gray-900 dark:text-gray-100">{review.product.name}</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">{review.product.category}</p>
          </div>
        )}

        <!-- Review Title -->
        {review.title && (
          <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">{review.title}</h1>
        )}

        <!-- Review Body -->
        <div class="prose prose-gray dark:prose-invert max-w-none mb-8">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-line">{review.body}</p>
        </div>

        <!-- Engagement Stats -->
        <div class="flex items-center gap-6 py-4 border-t border-b border-gray-200 dark:border-gray-700 mb-8">
          <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
            <span>{review.likes} likes</span>
          </div>
          {review.helpful_count !== undefined && (
            <div class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{review.helpful_count} found this helpful</span>
            </div>
          )}
        </div>

        <!-- Actions -->
        <div class="flex gap-4">
          <button
            class="flex-1 btn-primary py-3 bg-emerald-600 hover:bg-emerald-700"
            onclick="alert('This is a demo site. Actions not available.')"
          >
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
            Helpful
          </button>
          <button
            class="btn-secondary py-3"
            onclick="alert('This is a demo site. Reporting not available.')"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Reviews -->
  {relatedReviews.length > 0 && (
    <section class="py-8 md:py-12 bg-gray-50 dark:bg-gray-900/50">
      <div class="container">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">More {capitalizeFirst(review.type)} Reviews</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {relatedReviews.map((relatedReview) => (
            <Card href={`/reviews/${relatedReview.id}`}>
              <div class="p-4">
                <div class="flex items-center gap-2 mb-2">
                  <img
                    src={relatedReview.author.avatar}
                    alt={relatedReview.author.name}
                    class="w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800"
                    loading="lazy"
                  />
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate">{relatedReview.author.name}</p>
                  </div>
                </div>
                {relatedReview.title && (
                  <p class="font-medium text-gray-900 dark:text-gray-100 text-sm line-clamp-2 mb-2">{relatedReview.title}</p>
                )}
                <p class="text-gray-600 dark:text-gray-400 text-xs line-clamp-2 mb-2">{relatedReview.body}</p>
                <div class="flex items-center justify-between">
                  <span class={getTypeColor(relatedReview.type) + ' text-xs'}>{capitalizeFirst(relatedReview.type)}</span>
                  {relatedReview.rating && (
                    <div class="flex items-center gap-1">
                      <svg class="w-3 h-3 text-yellow-400 fill-current" viewBox="0 0 20 20">
                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                      </svg>
                      <span class="text-xs text-gray-600 dark:text-gray-400">{relatedReview.rating}</span>
                    </div>
                  )}
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
