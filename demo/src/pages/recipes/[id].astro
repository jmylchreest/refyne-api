---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import {
  getRecipes,
  getRecipeById,
  formatTime,
  formatRating,
  getDifficultyColor,
  getCalorieLabel,
} from '../../lib/recipes';

export async function getStaticPaths() {
  const recipes = await getRecipes();
  return recipes.map((recipe) => ({
    params: { id: recipe.id.toString() },
  }));
}

const { id } = Astro.params;
const recipe = await getRecipeById(parseInt(id, 10));

if (!recipe) {
  return Astro.redirect('/recipes');
}

const calorieInfo = getCalorieLabel(recipe.calories_per_serving);

const allRecipes = await getRecipes();
const relatedRecipes = allRecipes
  .filter((r) => r.id !== recipe.id && r.cuisine === recipe.cuisine)
  .slice(0, 4);
---

<Layout title={recipe.name} description={`${recipe.cuisine} recipe - ${recipe.difficulty} difficulty, ready in ${formatTime(recipe.total_time_minutes)}`}>
  <!-- Header -->
  <section class="bg-gradient-to-br from-orange-500 to-red-600 text-white">
    <div class="container py-6">
      <a
        href="/recipes"
        class="inline-flex items-center gap-2 text-orange-200 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Recipes
      </a>
    </div>
  </section>

  <!-- Recipe Details -->
  <section class="py-8 md:py-12">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Image -->
        <div>
          <div class="aspect-[4/3] bg-gray-100 dark:bg-gray-800 rounded-xl overflow-hidden relative">
            <img
              src={recipe.image}
              alt={recipe.name}
              class="w-full h-full object-cover"
            />
            <span class={`absolute top-4 right-4 ${getDifficultyColor(recipe.difficulty)} text-base px-3 py-1`}>
              {recipe.difficulty}
            </span>
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mt-4">
            {recipe.tags.map((tag) => (
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 text-sm rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        </div>

        <!-- Details -->
        <div>
          <div class="mb-4">
            <p class="text-sm text-orange-600 dark:text-orange-400 font-medium">{recipe.cuisine} Cuisine</p>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mt-1">{recipe.name}</h1>
          </div>

          <!-- Rating -->
          <div class="flex items-center gap-3 mb-6">
            <div class="flex items-center gap-1">
              {Array.from({ length: 5 }).map((_, i) => (
                <svg
                  class:list={[
                    'w-5 h-5',
                    i < Math.round(recipe.rating) ? 'text-yellow-400' : 'text-gray-200 dark:text-gray-600',
                  ]}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
              ))}
            </div>
            <span class="font-medium text-gray-900 dark:text-gray-100">{formatRating(recipe.rating)}</span>
            <span class="text-gray-500 dark:text-gray-400">({recipe.review_count} reviews)</span>
          </div>

          <!-- Quick Stats -->
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
            <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 text-center">
              <svg class="w-6 h-6 mx-auto text-gray-400 dark:text-gray-500 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="text-xs text-gray-500 dark:text-gray-400">Prep Time</p>
              <p class="font-semibold text-gray-900 dark:text-gray-100">{formatTime(recipe.prep_time_minutes)}</p>
            </div>
            <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 text-center">
              <svg class="w-6 h-6 mx-auto text-gray-400 dark:text-gray-500 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
              </svg>
              <p class="text-xs text-gray-500 dark:text-gray-400">Cook Time</p>
              <p class="font-semibold text-gray-900 dark:text-gray-100">{formatTime(recipe.cook_time_minutes)}</p>
            </div>
            <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 text-center">
              <svg class="w-6 h-6 mx-auto text-gray-400 dark:text-gray-500 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <p class="text-xs text-gray-500 dark:text-gray-400">Servings</p>
              <p class="font-semibold text-gray-900 dark:text-gray-100">{recipe.servings}</p>
            </div>
            <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 text-center">
              <svg class="w-6 h-6 mx-auto text-gray-400 dark:text-gray-500 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <p class="text-xs text-gray-500 dark:text-gray-400">Calories</p>
              <p class="font-semibold text-gray-900 dark:text-gray-100">{recipe.calories_per_serving}</p>
            </div>
          </div>

          <!-- Meal Types -->
          <div class="flex flex-wrap items-center gap-2 mb-6">
            <span class="text-sm text-gray-500 dark:text-gray-400">Meal type:</span>
            {recipe.meal_type.map((meal) => (
              <span class="badge-blue">{meal}</span>
            ))}
          </div>

          <!-- Action Buttons -->
          <div class="flex gap-4 mb-8">
            <button
              class="flex-1 btn-primary py-3 bg-orange-600 hover:bg-orange-700"
              onclick="window.print()"
            >
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Print Recipe
            </button>
            <button
              class="btn-secondary py-3"
              onclick="alert('This is a demo site. Saving not available.')"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
              </svg>
            </button>
          </div>

          <!-- Nutrition Summary -->
          <div class="bg-orange-50 dark:bg-orange-950/30 rounded-xl p-6">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Nutrition Info</h2>
            <dl class="space-y-3">
              <div class="flex justify-between text-sm">
                <dt class="text-gray-500 dark:text-gray-400">Calories per serving</dt>
                <dd class="font-medium text-gray-900 dark:text-gray-100">{recipe.calories_per_serving} kcal</dd>
              </div>
              <div class="flex justify-between text-sm">
                <dt class="text-gray-500 dark:text-gray-400">Total time</dt>
                <dd class="font-medium text-gray-900 dark:text-gray-100">{formatTime(recipe.total_time_minutes)}</dd>
              </div>
              <div class="flex justify-between text-sm">
                <dt class="text-gray-500 dark:text-gray-400">Portion size</dt>
                <dd class={calorieInfo.color}>{calorieInfo.label}</dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <!-- Ingredients & Instructions -->
      <div class="grid lg:grid-cols-3 gap-8 mt-12">
        <!-- Ingredients -->
        <div class="lg:col-span-1">
          <div class="bg-gray-50 dark:bg-gray-800/50 rounded-xl p-6 sticky top-24">
            <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-orange-500 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
              Ingredients
            </h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">For {recipe.servings} servings</p>
            <ul class="space-y-3">
              {recipe.ingredients.map((ingredient, index) => (
                <li class="flex items-start gap-3">
                  <input
                    type="checkbox"
                    id={`ingredient-${index}`}
                    class="mt-1 w-4 h-4 text-orange-600 border-gray-300 dark:border-gray-600 rounded focus:ring-orange-500 dark:bg-gray-700"
                  />
                  <label for={`ingredient-${index}`} class="text-gray-700 dark:text-gray-300 cursor-pointer">
                    {ingredient}
                  </label>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Instructions -->
        <div class="lg:col-span-2">
          <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            Instructions
          </h2>
          <ol class="space-y-6">
            {recipe.instructions.map((instruction, index) => (
              <li class="flex gap-4">
                <span class="flex-shrink-0 w-8 h-8 bg-orange-100 dark:bg-orange-900/50 text-orange-600 dark:text-orange-400 rounded-full flex items-center justify-center font-semibold text-sm">
                  {index + 1}
                </span>
                <div class="flex-1 pt-1">
                  <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{instruction}</p>
                </div>
              </li>
            ))}
          </ol>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Recipes -->
  {relatedRecipes.length > 0 && (
    <section class="py-8 md:py-12 bg-gray-50 dark:bg-gray-900/50">
      <div class="container">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">More {recipe.cuisine} Recipes</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {relatedRecipes.map((relatedRecipe) => (
            <Card href={`/recipes/${relatedRecipe.id}`}>
              <div class="aspect-[4/3] bg-gray-100 dark:bg-gray-800 overflow-hidden">
                <img
                  src={relatedRecipe.image}
                  alt={relatedRecipe.name}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="p-4">
                <p class="text-xs text-orange-600 dark:text-orange-400 font-medium uppercase tracking-wide">{relatedRecipe.cuisine}</p>
                <h3 class="font-medium text-gray-900 dark:text-gray-100 mt-1 line-clamp-2">{relatedRecipe.name}</h3>
                <div class="flex items-center gap-2 mt-2 text-sm text-gray-500 dark:text-gray-400">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{formatTime(relatedRecipe.total_time_minutes)}</span>
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media print {
    .btn-primary, .btn-secondary, nav, footer {
      display: none !important;
    }
  }
</style>
